# ==================================
# üåê DATABASE CONFIGURATION (PostgreSQL)
# ==================================
DB_HOST=localhost                     # Database host
DB_PORT=5432                          # PostgreSQL default port
DB_NAME=stockview                     # Database name
DB_USERNAME=postgres                  # Database username
DB_PASSWORD=your_db_password_here     # Database password
DB_SSL_MODE=disable                   # disable / require / verify-full

# ==================================
# üß† REDIS CONFIGURATION
# ==================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# ==================================
# üîê JWT CONFIGURATION
# ==================================
JWT_SECRET=your_super_secret_jwt_key_here_minimum_256_bits
JWT_EXPIRATION=86400000               # 1 day (in milliseconds)
JWT_REFRESH_EXPIRATION=604800000      # 7 days (in milliseconds)

# ==================================
# üåç EXTERNAL API KEYS
# ==================================
FINNHUB_API_KEY=your_finnhub_api_key_here
METALS_API_KEY=your_metals_api_key_here
CRYPTO_API_KEY=your_crypto_api_key_here

# ==================================
# üì¢ NOTIFICATION SERVICES
# ==================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ==================================
# ‚úâÔ∏è EMAIL CONFIGURATION
# ==================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email_here@gmail.com
SMTP_PASSWORD=your_app_specific_password_here
SMTP_FROM=noreply@automarkettracker.com

# ==================================
# ‚öôÔ∏è n8n AUTOMATION SERVICE
# ==================================
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_n8n_password_here
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http

# ==================================
# üíª APPLICATION CONFIGURATION
# ==================================
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:3000         # Frontend URL
API_URL=http://localhost:8080         # Backend API URL
WS_URL=ws://localhost:8080/ws         # WebSocket endpoint

# ==================================
# üìä MONITORING
# ==================================
PROMETHEUS_ENABLED=true
GRAFANA_ADMIN_PASSWORD=your_grafana_admin_password_here

# ==================================
# üîí SECURITY & CORS
# ==================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
RATE_LIMIT_REQUESTS_PER_MINUTE=100
